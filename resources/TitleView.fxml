<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" styleClass="root" stylesheets="@leagueFX.css"
           xmlns="http://javafx.com/javafx/8.0.102-ea" fx:controller="TitleController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="%title"/>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subtitle" text="%subtitle.1"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subtitle" text="%subtitle.2"/>
        </VBox>
        <TextArea text="%instructions"/>
    </VBox>
    <Button mnemonicParsing="false" text="%button.text" StackPane.alignment="BOTTOM_CENTER"/>
</StackPane>
